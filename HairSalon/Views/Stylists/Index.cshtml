@using Salon.Models;
@using System.Linq;
@{
  Layout = "_Layout";
  var sList = ViewBag.stylists as List<Stylist>;
}

<h1>Current Stylists</h1>

@if(ViewBag.stylists.Any())
{
  <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID#</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Title</th>
    </tr>
  </thead>
  <tbody>
  @foreach(Stylist s in sList)
  {
    <tr class="clickable" onclick="window.location="@($"/stylist/{s.StylistID}")">
      <th scope="row">@($"{s.StylistID}")</th>
      <td>@($"{s.FirstName}")</td>
      <td>@($"{s.LastName}")</td>
      <td>@($"{s.Title()}")</td>
    </tr>
  }
}
else
{
    <p>I'm sorry, there are currently no stylists. Please add a stylist to continue.</p>
    <a href="/stylist/new" class="btn btn-info">Add Stylist</a> 
}
