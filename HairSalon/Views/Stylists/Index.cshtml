@using Salon.Models;
@using System.Linq;
@{
  Layout = "_Layout";
  var sList = ViewBag.stylists as List<Stylist>;
}

<h1>Current Stylists</h1>

@if(!ViewBag.stylists.Any())
{
  foreach(Stylist s in sList)
  {
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
          <div class="col-md-4">
            <img src='@($"{s.ImgURL()}")' class="card-img" alt='@($"{s.FirstName} {s.LastName}'s portrait")'>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <input type="hidden" name="stylistID" value='@($"{s.StylistID}")'>
              <h5 class="card-title">@($"{s.FirstName} {s.LastName}")</h5>
              <p class="card-text">@($"{s.Title()")</p>
              <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
          </div>
        </div>
      </div>
    }
  
}
else
{
    <p>I'm sorry, there are currently no stylists. Please add a stylist to continue.</p>
    <a href="/stylist/new" class="btn btn-info">Add Stylist</a> 
}
