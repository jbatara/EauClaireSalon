@model Salon.Models.Service;
@using Salon.Models;

@{
    Layout="_Layout";
}

<h1>Add a Stylist</h1>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name, "Service Name  ")
    @Html.TextBoxFor(model => model.Name)<br>

    @Html.LabelFor(model => model.Tier1Price, "Apprentice Price  ")
    @Html.TextBoxFor(model => model.Tier1Price)<br>

    @Html.LabelFor(model => model.Tier2Price, "Stylist Price  ")
    @Html.TextBoxFor(model => model.Tier2Price)<br>

    @Html.LabelFor(model => model.Tier3Price, "Master Stylist Price  ")
    @Html.TextBoxFor(model => model.Tier3Price)<br>
  
    <a href="/services" class="btn btn-info">Cancel</a>
    <button type="submit" value="Add Review" class="btn btn-info">Save Service</button>
}
